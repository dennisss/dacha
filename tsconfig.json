{
	"compilerOptions": {
		"jsx": "react",
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2017",
		"lib": [
			"es2017"
		],
		"noImplicitAny": true,
		"removeComments": false,
		"sourceMap": false,
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"outDir": "./dist/",
		"importHelpers": true,
		"declaration": true,
		"baseUrl": ".",
		"rootDir": ".",
		"paths": {
			"*": [
				"*",
				"node_modules/*",
			]
		}
	},
	"include": [
		"pkg/**/*"
	],
	"exclude": [
		"node_modules"
	]
}