name: "system.manager"
replicas: 1
worker {
    persistent: true

    args: [
        "/volumes/bundle/built/pkg/container/cluster_manager",
        "--port=rpc"
    ]

    ports {
        name: "rpc"
        type: TCP
        protocol: [HTTP, GRPC]
    }

    volumes: [
        {
            name: "bundle"
            build_target: "//pkg/container:cluster_manager_bundle"
        }
    ]
}
